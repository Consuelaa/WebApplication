    @section Scripts {
        <script type="text/javascript">
            // Get all the totalmic elements
            var totalMicElements = document.querySelectorAll('.totalmic');

            // Add an onchange event listener to each totalmic element
            for (var i = 0; i < totalMicElements.length; i++) {
                totalMicElements[i].addEventListener('change', function () {
                    // Get the current value of the element and convert it to a number
                    var currentValue = parseFloat(this.value) || 0;
                    if (!isNaN(currentValue)) {
                        // Get the total element and convert its value to a number
                        var totalElement = document.getElementById('total');
                        var currentTotal = parseFloat(totalElement.value);
                        
                        if (isNaN(currentTotal)) {
                            currentTotal = 0;
                        }
                        // Get the previous value of the element and convert it to a number
                        var previousValue = parseFloat(this.dataset.previousValue);
                        if (isNaN(previousValue)) {
                            previousValue = 0;
                        }
                        // Subtract the previous value from the total
                        var newTotal = currentTotal - previousValue;
                        // Add the current value to the total
                        newTotal += currentValue;
                        // Update the total element and the dataset of the current element with its current value
                        totalElement.value = newTotal.toFixed(2);
                        this.dataset.previousValue = currentValue;
                    }
                });
            }
        </script>

